server {
  listen 80;
  server_name localhost;

  root /usr/share/nginx/html;
  index index.html;

  location / {
    try_files $uri /index.html;   # Serve index.html for all requests
  }
  
  # Optional: If you want to handle other static assets or API routes
  # location /api {
  #   proxy_pass http://backend:3000;
  # }
}
